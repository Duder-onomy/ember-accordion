<h1>Nested Accordion Example</h1>
<p>TBD docs</p>

{{#accordion-list as |listId|}}
  {{#each items as |item|}}
    {{#accordion-item as |itemId|}}

      {{#accordion-toggle listId itemId}}
        {{item.name}}
        <i class="fa fa-angle-down"></i>
      {{/accordion-toggle}}

      {{#accordion-panel listId itemId}}
        {{accordion-list item.children 'accordion-elements/toggle' 'accordion-elements/panel'}}
      {{/accordion-panel}}

    {{/accordion-item}}
  {{/each}}
{{/accordion-list}}
